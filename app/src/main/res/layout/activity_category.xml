<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >


    <Button
        android:id="@+id/CateAirport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airport"
        />

    <Button
        android:id="@+id/CateRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/CateAirport"
        android:text="Restaurant"
        />

    <Button
        android:id="@+id/CateAccomodation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/CateRestaurant"
        android:text="Accomodation"
        />

</RelativeLayout>